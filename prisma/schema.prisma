generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  products    Product[]

  @@map("category") // Nombre de la tabla en minúsculas
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float
  stock      Int
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  sales      Sale[]
  promotions      Promotion[]

  @@map("product") // Nombre de la tabla en minúsculas
}

model PaymentMethod {
  id    Int    @id @default(autoincrement())
  name  String
  sales Sale[]

  @@map("payment_method") // Nombre de la tabla en minúsculas
}

model Customer {
  id             Int    @id @default(autoincrement())
  name           String
  lastname       String
  identification String
  sales          Sale[]

  @@map("customer") // Nombre de la tabla en minúsculas
}

model Sale {
  id              Int             @id @default(autoincrement())
  total           Float
  createdAt       DateTime        @default(now())
  quantity        Int
  productId       Int
  product         Product         @relation(fields: [productId], references: [id])
  paymentMethodId Int
  paymentMethod   PaymentMethod   @relation(fields: [paymentMethodId], references: [id])
  customerId      Int
  customer        Customer        @relation(fields: [customerId], references: [id])

  @@map("sale") // Nombre de la tabla en minúsculas
}

model Proveedores {
  id             Int    @id @default(autoincrement())
  nit          String
  razonsocial  String


  @@map("proveedor") // Nombre de la tabla en minúsculas
}

model Shipment{
  id            Int    @id @default(autoincrement())
  Department String
  City       String
  Address    String

  @@map("shipment") // Nombre de la tabla en minúsculas
}

